<% if tasks %>
  <ul>
    <% tasks.each do |task| %>
      <% title = task.dig('properties', 'Name', 'title', 0, 'plain_text') %>
      <% next if title.nil? %>
      <% title.strip! %>
      <% task_id = task['id'].tr("-", "") %>
      <% url = "#{NOTION_BASE_URL}#{title.tr(" ", "-")}-#{task_id}" %>
      <li>
        <!-- <input type="checkbox" onClick="completeTask('<%= task_id %>')"> -->
        &#9634; <a href="<%= url %>" target="_blank"><%= title %></a>
        <!-- <a href="/complete_task/<%= task_id %>">mark as completed</a> -->
        <% unless task[:subtasks].nil? %>
          <ul>
            <% task[:subtasks].each do |subtask| %>
              <% subtask_title = subtask.dig('properties', 'Name', 'title', 0, 'plain_text') %>
              <% next if subtask_title.nil? %>
              <% subtask_title.strip! %>
              <% subtask_id = subtask['id'].tr("-", "") %>
              <% subtask_url = "#{NOTION_BASE_URL}#{subtask_title.tr(" ", "-")}-#{subtask_id}" %>
              <li>
                &#9634; <a href="<%= subtask_url %>" target="_blank"><%= subtask_title %></a>
              </li>
            <% end %>
          </ul>
        <% end %>
      </li>
    <% end %>
  </ul>
<% end %>

<style>
  ul, li {
    padding: 0;
    margin: 0;
  }
  li:not(:last-child) {
    border-bottom: 1px solid #e9e9e9;
    padding-bottom: 10px;
  }
  li {
    padding-top: 10px;
    list-style: none;
    margin: 5px;
  }
  ul li ul li {
    margin-left: 20px;
  }
  li a {
    color: #000;
    margin-left: 5px;
    text-decoration: none;
  }
</style>

<script type="text/javascript">

  function completeTask(task_id) {
    fetch('/api/complete_task/' + task_id, {
      method: 'GET',
      headers: {
        'Content-Type': 'application/html'
      }
    }).then(function(response) {
      // response is a promise
      return response.text();
    }).then(function(my_text) {
      // text() gave us the text response, which in our case is the HTML to inject
      document.querySelector(".tasks").innerHTML = my_text;
    });
  }

</script>
